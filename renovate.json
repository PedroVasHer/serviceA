{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "@pedrovasher/serviceb"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false,
      "branchPrefix": "feature/",
      "prCreation": "inmediate"
    }
  ],
  "hostRules" : [
    {
      "hostType": "npm",
      "matchHost": "npm.pkg.github.com",
      "token":"${{ secrets.NPM_TOKEN }}"
    }
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard"
}
